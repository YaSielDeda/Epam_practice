        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EPAM.FileStorage.WPF_PL"
        mc:Ignorable="d"
        Title="ConfirmDelete" Height="265.735" Width="472.418" ResizeMode="NoResize">
    <Grid>
        <Label Content="Are you sure you want to delete this file?" HorizontalAlignment="Left" Margin="119,79,0,0" VerticalAlignment="Top"/>
        <Button x:Name="CancelDeleteButton" Content="Cancel" HorizontalAlignment="Left" Margin="138,121,0,0" VerticalAlignment="Top" Width="75" Click="CancelDeleteButton_Click"/>
